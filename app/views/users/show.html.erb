<span id="name"><strong>Name: </strong><%= @user.name %></span>

<span id="hidden-form"><%= form_for @user do |f| %>
<%= f.label :first_name %>
<%= f.text_field :first_name %>
<%= f.label :last_name %>
<%= f.text_field :last_name %>
  <%= f.submit "Update User", class:"update-user" %>
<% end %>
</span>
<br>
<div id="container"><button id="edit">Edit This User</button></div>


<div id="account_info">
  <h3>Account Info:</h3>
  <strong>Employer</strong>: <%= @account.employer %><br>
  <strong>Acct Number</strong>: <%= @account.account_number %><br>
  <strong>Organization Name</strong>: <%= @account.organization.name %><br>
  <strong>Organization State</strong>: <%= @account.organization.state %>
</div>
